extends ../../common/order

block append order
  .col-sm-6.align-self-md-center
    .card.z-depth-0.transparent.text-white
      h2.card-title.proxima-nova-font.text-uppercase.mb-4.
        event-driven algorithmic trade station
      .row
        .col-lg-6
          ul
            li.icon-bar-item.d-flex.flex-row.mb-2
              img.img-fluid(src=require('assets/img/icons/FX-EA.svg'))
              p.icon-description.my-auto.ml-2 FX Bolt EA
            li.icon-bar-item.d-flex.flex-row.mb-2
              img.img-fluid(src=require('assets/img/icons/app.svg'))
              p.icon-description.my-auto.ml-2 iOS/Android App
            li.icon-bar-item.d-flex.flex-row.mb-2
              img.img-fluid(src=require('assets/img/icons/tick.svg'))
              p.icon-description.my-auto.ml-2 Tick Chart Builder

        .col-lg-6
          ul
            li.icon-bar-item.d-flex.flex-row.mb-2
              img.img-fluid(src=require('assets/img/icons/MacroStraddle.svg'))
              p.icon-description.my-auto.ml-2 MacroStraddle EA
            li.icon-bar-item.d-flex.flex-row.mb-2
              img.img-fluid(src=require('assets/img/icons/chat.svg'))
              p.icon-description.my-auto.ml-2 Chat Room
            li.icon-bar-item.d-flex.flex-row.mb-2
              img.img-fluid(src=require('assets/img/icons/plans.svg'))
              p.icon-description.my-auto.ml-2 Daily Trade Plans

  .col-sm-5.col-lg-4.push-sm-1
    .card.pricing-card.fx-bolt.py-5.z-depth-2

      .header.proxima-nova-font.text-center
        .p-3.w-50.mx-auto
          object.info__fx(data=require('assets/img/logos/macrotrader-logo_blue_simple.svg') type='image/svg+xml')
        h3 MacroTrader
        p.display-3.pt-4.text-uppercase.text-primary $199
        h5.grey-text Monthly

      .card-block.m-auto
        .dropdown
          button.btn.btn-block.btn-info.btn-lg.dropdown-toggle(type='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
            | Dropdown
          .dropdown-menu
            a.dropdown-item(href='#') Action
            a.dropdown-item(href='#') Another action
            a.dropdown-item(href='#') Something else here
            a.dropdown-item(href='#') Separated link
        a.btn.btn-block.btn-danger.mt-3(href="#") Checkout

      .card-block.m-auto.proxima-nova-font.text-center
        p.card-text.grey-text.
          Get 2 months for free on a yearly subscription!

