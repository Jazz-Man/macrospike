extends common/layout

block append content
	.container
		+breadcrumb
		.row
			.col-md-4.col-sm-4.col-md-offset-4.col-sm-offset-4
				section.page-title
					h1 Reset Password
				section
					form.form.inputs-underline
						.form-group
							label(for='email') Email
							input#email.form-control(type='email' name='email' placeholder='Your email')
						.form-group.center
							button.btn.btn-primary.width-100(type='submit') Send me new password