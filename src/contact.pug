extends common/layout

block append content
	.container
		+breadcrumb
		section.page-title
			h1.pull-left Contact
			.pull-right.featured-contact
				i.icon_comment_alt
				h4 24/7 Support
				h3 228-341-8068

	section
		#map-contact.map.height-400px
	section.block
		.container
			.row
				.col-md-3.col-sm-3
					h3 Contact Information
					.box
						address
							strong Location
							figure 4758 Nancy Street
							br
							strong Phone Number
							figure +1 919-571-2528
							br
							strong Email
							figure
								a(href='#') hello@example.com
							br
							strong Customer Care
							figure
								a(href='#') support@example.com

				.col-md-9.col-sm-9
					h3 Form
					form#form-hero.form.form-email.inputs-underline
						.row
							.col-md-4.col-sm-4
								.form-group
									label(for='name') Name
									input#name.form-control(type='text' name='name')

							.col-md-4.col-sm-4
								.form-group
									label(for='email') Email
									input#email.form-control(type='email' name='email')

							.col-md-4.col-sm-4
								.form-group
									label(for='subject') Subject
									input#subject.form-control(type='text' name='subject')
						.form-group
							label(for='message') Message
							textarea#message.form-control(rows='4' name='message')
						.form-group
							button.btn.btn-primary.icon.shadow(type='submit')
								| Send Message
								i.fa.fa-caret-right

