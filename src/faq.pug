extends common/layout


mixin faq(min,max,id)
	div(id=id role='tablist' aria-multiselectable='true')
		- var n = min;
			while n < max
				-var idHash = n++
				.card
					div(id='header-' + idHash+'-'+id class="card-header" role='tab')
						h5.card-title
							a(data-toggle='collapse' data-parent='#' + id href='#collapse-' + idHash+'-'+id aria-expanded='true' aria-controls='collapseOne')

								| Do you offer a Demo version #{idHash}?
					div.collapse(id='collapse-' + idHash+'-'+id role='tabpanel' aria-labelledby='header-' + idHash+'-'+id)
						.card-block
							p.card-text.
								#{idHash}) No. We are convinced of our offerings and have it priced very fairly. We do not think offering a demo version would be neccessary.

block append defaultTitle
	title FAQ

block vars
	- var bodyClass = 'faq'

block append content
	section.section.view.bg-1.py-5
		.container.h-100
			.row.h-100
				.col-md-4.col-sm-12.mb-3
					.card
						.card-block
							h4.card-title.text-uppercase FXBOLT

					+faq(5,7,'accordion')
				.col-md-4.col-sm-12.mb-3
					.card
						.card-block
							h4.card-title.text-uppercase MACROMANAGER
					+faq(0,10,'MACROMANAGER')
